  <!-- *********************** Kontakt Seksjon *********************** -->
  <section class="page-section" id="kontakt", style="background-color:#F6F7F8">
    <div class="container">

      <!-- Contact Section Heading -->
      <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Kontakt Oss</h2>

      <!-- Icon Divider -->
      <div class="divider-custom">
        <div class="divider-custom-line"></div>
          <div class="divider-custom-icon">
            <%= fa_icon "star" %>
          </div>
        <div class="divider-custom-line"></div>
      </div>



      <!-- Contact Section Form -->
      <div class="row">
        <div class="col-lg-8 mx-auto">

          <div id="kontakt">
            <%= form_for :contact_mailer, :url => {action: "create", controller: "contact_mailers"} do |f|%>
            <div class="control-group">
              <%= f.text_field :first_name, class: "form-control form-inline", id: "name", placeholder: "Fornavn" %> <br>
            </div>
            <div class="control-group">
              <%= f.text_field :last_name, class: "form-control form-control-inline", id: "name", placeholder: "Etternavn" %><br>
            </div>

            <div class="control-group">
              <%= f.text_field :phone, class: "form-control form-inline", id: "name", placeholder: "Telefon" %><br>
            </div>
            <div class="control-group">
              <%= f.text_field :email, class: "form-control form-inline", id: "name", placeholder: "Epost" %><br>
            </div>
            <div class="control-group">
              <%= f.text_area :message, class: "form-control form-inline", id: "name", placeholder: "Melding", rows: "5" %><br>
            </div>

              <%= f.submit "Send", class: "btn btn-xl btn-info" %>

            <% end %>
          </div>

        </div>
      </div>


        <!-- container end -->
    </div>
  </section>



  <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
  <div class="scroll-to-top d-lg-none position-fixed ">
    <a class="js-scroll-trigger d-block text-center text-white rounded" href="#page-top">
      <i class="fa fa-chevron-up"></i>
    </a>
  </div>

  <!-- Portfolio Modals -->
  <% count = 0 %>
<% @galleries.each do |gallery| %>
<% count += 1 %>
  <!-- Portfolio Modal 1 -->
  <div class="portfolio-modal modal fade" id="portfolioModal<%= count %>" tabindex="-1" role="dialog" aria-labelledby="portfolioModal1Label" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
      <div class="modal-content">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">
            <%= fa_icon "times" %>
          </span>
        </button>
        <div class="modal-body text-center">
          <div class="container">

            <div class="row justify-content-center">
              <div class="col-lg-8">

                <!-- Portfolio Modal - Title -->
                <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0"><%= gallery.header %></h2>
                <!-- Icon Divider -->
                <div class="divider-custom">
                  <div class="divider-custom-line"></div>
                  <div class="divider-custom-icon">
                    <%= fa_icon "star" %>
                  </div>
                  <div class="divider-custom-line"></div>
                </div>
                <!-- Portfolio Modal - Image -->
                <%= cl_image_tag gallery.photo, height: 400, width: 600, class: "img-fluid-2 rounded mb-5" %>
                <!-- Portfolio Modal - Text -->
                <p class="mb-5"><%= gallery.description %></p>
                <button class="btn btn-primary" href="#" data-dismiss="modal">
                  <%= fa_icon "times" %>
                  Lukk Vindu
                </button>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

