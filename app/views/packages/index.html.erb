  <!-- ****************** Pakke section ****************** -->
 <section class="page-section portfolio" id="pakker" style="background-color: #fff;">
  <div class="container">
    <% if current_user && current_user.admin? %>
      <%= link_to "Legg til Ny Pakke" , new_package_path, class: "btn btn-xl btn-primary" %>
    <% end %>
    <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Alle Pakker</h2>
    <br>
    <!-- Icon Divider -->
    <div class="divider-custom">
      <div class="divider-custom-line"></div>
        <div class="divider-custom-icon">
          <%= fa_icon "star" %>
        </div>
      <div class="divider-custom-line"></div>
    </div>
    <p class="text-center">Vi er stolte av å tilby eksklusive logopakker til landets mest rimelige priser.</p>
    <br>

    <div class="row">
      <% @packages.each do |package| %>
      <div class="col-md-4">
        <table class="table table-primary thead-dark table-borderless text-center" style="height:100%;">
          <thead class="thead-dark">
            <th style="font-size: 30px;"><b> <%= package.name %> </b></th>
            <tr>
              <th style="font-size: 30px;"> Totalt: <%= package.price.to_i %>,- NOK </th>
            </tr>
          </thead>
          <% package.services.each do |service| %>
          <tr>
            <td style="color:#117964;"><%= service.name %></td>
          </tr>
          <% end %>
          <% empty = Service.all.count - package.services.count %>
          <% for i in 0...empty %>
            <tr>
              <td style="color:#117964;"></td>
            </tr>
          <% end %>
          <% if current_user && current_user.admin? %>
          <tr>
            <td><%= link_to "Endre", edit_package_path(package) %></td>
          </tr>
          <tr>
            <td> <%= link_to "Slett", package, method: :delete, data: {confirm: "Er du sikker?"} %> </td>
          </tr>
          <% end %>
          <tr class="table-primary">
            <td class="text-center"> <%= link_to "Bestill", new_order_path, class: "btn btn-success btn-lg" %> </td>
          </tr>
        </table>
      </div>

    <br><br>
    <% end %>
    </div>
  <!-- Ebd container  -->
  </div>

 </section>

