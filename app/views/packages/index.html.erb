  <!-- ***************** Galleri Seksjon ***************** -->
  <section class="page-section portfolio" id="galleri", style="background-color:#F6F7F8">
    <div class="container">
      <% if current_user && current_user.admin? %>
      <%= link_to "Hele Galleriet", admins_gallery_path, class: "btn btn-xl btn-primary" %>
      <br>
      <% end %>

      <!-- Portfolio Section Heading -->
      <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Galleri</h2><br>
      <p class="text-center">Her er noen av våre utvalgte prosjekter</p>

      <!-- Icon Divider -->
      <div class="divider-custom">
        <div class="divider-custom-line"></div>
          <div class="divider-custom-icon">
            <%= fa_icon "star" %>
          </div>
        <div class="divider-custom-line"></div>
