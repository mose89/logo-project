  <!-- Masthead -->
  <header class="masthead bg-primary text-white text-center">
    <div class="container d-flex align-items-center flex-column">

      <!-- Masthead Avatar Image -->
      <%image_tag "avataaars", class: "masthead-avatar mb-5" %>

      <!-- Masthead Heading -->
      <h1 class="masthead-heading text-uppercase mb-0" style="font-size:45px;"> Vi Designer Logo, visittkort og brevhoder</h1>
      <br>
      <p class="masthead-subheading font-weight-light mb-0" style="text-align: left;">...som skiller seg ut og gir varige inntrykk</p>
      <!-- Icon Divider -->
      <div class="divider-custom divider-light">

      </div>

      <!-- Masthead Subheading -->
          <br>
          <br>
          <br>

      <div class="row">
        <div class="col-md-6">
          <%= link_to ("Galleri"), "/#galleri", :class => "btn btn-dark btn-xl", style: "font-size: 25px; color:dark;" %>
        </div>
        <div class="col-md-6">
          <%= link_to ("Priser"), "/#pakker", :class => "btn btn-light btn-xl", style: "font-size: 25px; color:dark;" %>
