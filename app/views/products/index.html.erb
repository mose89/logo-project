<header class="masthead-mose bg-primary text-white text-left">
  <div class="container d-flex align-items-center flex-column">

    <!-- Masthead Heading -->
    <h1 class="masthead-heading text-uppercase mb-0">VÃ¥re Produkter</h1>
  </div>
</header>

<div class="container">
  <br>
    Totalt <%= @products.count %> Produkter
    <br><br>
  <div class="row" >
    <% @products.each do |product| %>
    <div class="col-md-4">

      <div class="card">
        <%= cl_image_tag(product.photo, :width => 346, :height => 240, class: "card-img-top") %>
        <div class="card-body" style="text-align: center;">
          <h4 class="card-title"><%= product.name.capitalize %></h4>
          <p class="card-text">
           <%= product.description %> </p>
          <p class="card-text"> <%= product.price.to_i %> NOK </p>
          <p class="card-text"> <%= link_to "Detaljer", product, class: "btn btn-primary btn-lg" %> </p>
          <% if current_user && current_user.admin? %>
            <p class="card-text"><%= link_to "Endre", edit_product_path(product), class: "btn btn-warning btn-lg" %> </p>
            <p class="card-text">
              <%= link_to "Slett", product, method: :delete, data: {confirm: "Er du sikker? Noen pakker har kanskje dette produktet"}, class: "btn btn-lg btn-danger" %>
          <% end %>
          </p>
        </div>

      </div>
<br>

    </div>

    <% end %>
  </div>
  <br>
  <br>
  <br>
  <% if current_user && current_user.admin? %>
  <%= link_to "Legg til Nytt Produkt" , new_product_path, style: "text-align: center;", class: "btn btn-xl btn-success" %>
  <% end %>
</div>
