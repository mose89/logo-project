  <header class="masthead bg-primary text-white text-center">
    <div class="container d-flex align-items-center flex-column">

      <!-- Masthead Heading -->

      <h1><%= @product.name %> </h1><br>
      <h4><b>Produktbeskrivelse:</b></h4>
      <p style="font-size: 18px;"><%= @product.description %></p>
      <h4> Pris: <%= (@product.price).to_i %>,- </h4>
      <% if current_user && current_user.admin? %>
        <div class="row">

          <div class=col-md-3>
            <%= link_to "Endre", edit_product_path(@product), class: "btn btn-lg btn-warning" %>
          </div>
          <div class=col-md-2></div>
          <div class="col-md-3">
            <%= link_to "Slett", @product, method: :delete, data: {confirm: "Er du sikker? Noen pakker har kanskje dette produktet"}, class: "btn btn-lg btn-danger" %>
          </div>
          <div class="col-md-4">
            <%= link_to "Legg til Nytt Produkt" , new_product_path, class: "btn btn-lg btn-success" %>
          </div>

      <% else %>

          <div class=col-md-5>
            <%= link_to "Bestill", new_single_order_path, class: "btn btn-xl btn-warning" %>
          </div>

        </div>
      <% end %>
<br>
<br>


    </div>
  </header>

<div class="container">


</div>
