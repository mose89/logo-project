<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

  <%= render "shared/admin_nav" %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%= render "shared/admin_nav_top" %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
            <%= link_to "Ny Stil", new_style_path, class: "d-none d-sm-inline-block btn btn-md btn-primary shadow-sm" %>
          </div>

          <!-- Start Data Top Row -->
          <%= render "shared/admin_data_boxes" %>
          <!-- End Data Top row -->


          <!-- Content Row -->
          <div class="row">
<% @styles.each do |style| %>

            <!-- Area Chart -->
            <div class="col-xl-4 col-lg-4">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary"><%="#{style.id}-#{style.name}" %></h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                  <%="Soon cl image tag #{style.image} "%>
                </div>

              </div>
            </div>
<% end %>
          </div>



      <!-- Footer -->
<%= render "shared/admin_footer" %>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

</body>
