<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

  <%= render "shared/admin_nav" %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%= render "shared/admin_nav_top" %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
            <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
          </div>

          <!-- Start Data Top Row -->
          <%= render "shared/admin_data_boxes" %>
          <!-- End Data Top row -->

          <div class="row">

            <!-- Area Chart -->
            <div class="col-xl-12 col-lg-12">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">Aktive Pakkeordre</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                  <div class="chart-area">

                    <table class="table">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Pakke</th>
                          <th>Logo Navn</th>
                          <th>Slagord</th>
                          <th>Kunde</th>
                          <th>Pris</th>
                          <th>Levert</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @active_orders.each do |order| %>
                        <tr>
                          <td><%= order.id %></td>
                          <td><%= order.package.name %></td>
                          <td><%= order.logo_name %></td>
                          <td><%= order.slogan %></td>
                          <td><%= "#{order.company_detail.first_name} i #{order.company_detail.business_name}" %></td>
                          <td><%= "#{order.total} NOK" %></td>
                          <td>
                            <%= form_for order, :url => order_path(order.id), :html => { :method => :patch } do |f| %>
                              <%= f.hidden_field :active, value: false %>
                              <%= f.submit 'Deaktiver', class: "btn btn-sm btn-primary" %>
                            <% end %>
                          </td>
                          <td><%= link_to "Flere Detaljer", order_path(order), class: "btn btn-sm btn-primary" %></td>
                        </tr>
                        <% end %>
                      </tbody>
                    </table>

                  </div>
                </div>
              </div>
            </div>


          <!-- Content Row -->
            <div class="col-xl-12 col-lg-12">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">Aktive Produktordre</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                  <div class="chart-area">

                    <table class="table">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Produkt</th>
                          <th>Design</th>
                          <th>Kunde</th>
                          <th>Pris</th>
                          <th>Levert</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @active_single_orders.last(5).each do |order| %>
                        <tr>
                          <td><%= order.id %></td>
                          <td><%= order.product.name %></td>
                          <% if order.design == nil %>
                          <td> <%= cl_image_path order.design %></td>
                          <% else %>
                          <td></td>
                          <% end %>
                          <td><%= "#{order.company_detail.first_name} i #{order.company_detail.business_name}" %></td>
                          <td><%= "#{order.total} NOK" %></td>
                          <td>
                            <%= form_for order, :url => single_order_path(order.id), :html => { :method => :put } do |f| %>
                              <%= f.hidden_field :active, value: false %>
                              <%= f.submit 'Deaktiver', class: "btn btn-sm btn-primary" %>
                            <% end %>
                          </td>
                        </tr>
                        <% end %>
                      </tbody>
                    </table>

                  </div>
                </div>

              </div>
            </div>

          <!-- Content Row -->
            <div class="col-xl-12 col-lg-12">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">Historiske Produktordre</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                  <div class="chart-area">

                    <table class="table table-dark">
